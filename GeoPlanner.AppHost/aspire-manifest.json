{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "geoplannerapi": {
      "type": "project.v0",
      "path": "../GeoPlanner.WebApi/GeoPlanner.WebApi.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{geoplannerapi.bindings.http.targetPort}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        }
      }
    },
    "angular": {
      "type": "dockerfile.v0",
      "path": "../GeoPlanner.Angular/Dockerfile",
      "context": "../GeoPlanner.Angular",
      "env": {
        "NODE_ENV": "development",
        "services__geoplannerapi__http__0": "{geoplannerapi.bindings.http.url}",
        "services__geoplannerapi__https__0": "{geoplannerapi.bindings.https.url}",
        "PORT": "{angular.bindings.http.targetPort}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8000,
          "external": true
        }
      }
    }
  }
}